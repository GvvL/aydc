<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding3"
    android:paddingBottom="@dimen/padding3"
    android:paddingLeft="@dimen/padding2"
    android:paddingRight="@dimen/padding2"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_height="65dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/store_img"
	        android:layout_height="match_parent"
	        android:layout_width="80dp"
	        android:paddingTop="3dp"
	        android:paddingBottom="3dp"
	        android:scaleType="fitXY"
	        android:src="@drawable/test_store"/>
        <!--店详情  -->
        <LinearLayout 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/padding2">
            <!--标题  -->
            <LinearLayout 
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/st_title"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:textSize="@dimen/font4"
                    android:layout_weight="1"
                    android:text="小二龙虾馆"/>

                <!--简签  -->
                <LinearLayout 
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
	                    android:layout_height="wrap_content"
	                    android:layout_width="wrap_content"
	                    android:background="@drawable/shape_corners_a"
	                    android:textColor="@color/maingray6"
	                    android:paddingLeft="2dp"
	                    android:paddingRight="2dp"
	                    android:textSize="@dimen/font1"
	                    android:text="@string/cell_store_jianqian_a"/>

                    
                </LinearLayout>
            </LinearLayout>
            <!--评分+月销  -->
            <LinearLayout 
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar1"
                        android:layout_width="wrap_content"
                        android:layout_height="13dp"
                        android:layout_gravity="bottom"
                        android:numStars="5"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        style="@style/roomRatingBar"
                        android:max="5"
                        android:isIndicator="true"
                        android:overScrollMode="never"
                         />

                    <TextView
                        android:id="@+id/month_sales"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:text="月售481份"
                        android:textColor="@color/mainblack"
                        android:textSize="@dimen/font_little" />

            </LinearLayout>
            <!--起送+配送+时间  -->

            <LinearLayout 
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
                <!--起送  -->
                <LinearLayout 
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:textSize="@dimen/font_little"
                        android:textColor="@color/mainblack"
                        android:text="@string/cell_store_startprice"/>

                    <TextView
                        android:id="@+id/start_distribution_fee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        android:gravity="bottom"
                        android:textSize="@dimen/font_little"
                        android:text="¥100"
                        android:textColor="@color/mainblack" />
                </LinearLayout>
                <View 
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/maingray3"/>
                <!--配送 -->
                <LinearLayout 
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:gravity="bottom"
                        android:textSize="@dimen/font_little"
                        android:textColor="@color/mainblack"
                        android:text="@string/cell_store_sendprice"/>

                    <TextView
                        android:id="@+id/distribution_fee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        android:textSize="@dimen/font_little"
                        android:gravity="bottom"
                        android:text="¥6"
                        android:textColor="@color/mainblack" />
                </LinearLayout>
                <View 
                    android:layout_height="match_parent"
                    android:layout_width="0.5dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/maingray3"/>
                <!--送时间 -->
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="3dp"
                        android:layout_marginStart="3dp"
                        android:gravity="bottom"
                        android:textSize="@dimen/font_little"
                        android:text="60分钟"
                        android:textColor="@color/mainblack" />


            </LinearLayout>         
        </LinearLayout>   
    </LinearLayout>
    <!--活动  -->
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="@dimen/padding2"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
			<TextView 
			    android:layout_marginLeft="2dp"
			    android:layout_height="14dp"
			    android:layout_width="14dp"
			    android:background="@drawable/shape_corners_b"
			    android:textSize="@dimen/font1"
			    android:textColor="@color/mainwhite"
			    android:gravity="center"
			    android:text="减"/>
            <TextView 
                android:id="@+id/act_detail_str"
                android:layout_marginLeft="@dimen/padding2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColor="@color/maingray4"
                android:textSize="@dimen/font_little"
                android:text="在线支付满40减11元，满60减16元，满100减20元"/>
            
        </LinearLayout>
        
        
    </LinearLayout>

    

</LinearLayout>
