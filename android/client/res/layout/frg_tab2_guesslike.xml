<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_marginTop="@dimen/padding2" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View android:layout_height="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/padding2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_tab2_guesslike_left"/>
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/font3"
        android:textColor="@color/mainblack"
        android:text="@string/tab2_guesslike_title"/>
    <View android:layout_height="1dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/padding2"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_tab2_guesslike_right"/>
</LinearLayout>
<TextView 
    android:layout_marginTop="@dimen/padding1"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="@string/tab2_guesslike_str"
    android:textSize="@dimen/font2"
    android:textColor="@color/maingray4"
    android:gravity="center_horizontal"/>

</merge>